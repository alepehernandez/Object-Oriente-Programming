/* Write a program that ask users to input a number: Displayed if the number is even or odd */



#include <iostream>

int main(int argc, const char * argv[]) { // comand line arguments
    
// Users enters inter number
//program write out if that numbers is even or odd

int number;
    
    std::cout << "Please enter a whole number:";
    std::cin>> number;
if(number %2 == 0)
{
    std::cout << "It is an even number\n";
}
else
{
    std::cout <<"It is an odd number\n" ;
  
}
    std::cout <<"Bye!\n";


    return 0;
}
